# Application
APP_NAME=Consultation Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
API_V1_STR=/api/v1

# Database
DATABASE_URL=postgresql://consultation_user:consultation_password@localhost:5432/consultation_platform
DATABASE_TEST_URL=postgresql://consultation_user:consultation_password@localhost:5432/consultation_platform_test

# Redis
REDIS_URL=redis://:redis_password@localhost:6379/0

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Email Configuration
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@consultation.com
EMAILS_FROM_NAME=Consultation Platform

# SMS Configuration (Iranian providers)
SMS_PROVIDER=kavenegar
SMS_API_KEY=your-sms-api-key
SMS_SENDER=10008663

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,mp4,mp3

# Payment Gateway
ZARINPAL_MERCHANT_ID=your-zarinpal-merchant-id
ZARINPAL_SANDBOX=true

# WebRTC
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_PASSWORD=your-turn-password

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=8001

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Backup
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30